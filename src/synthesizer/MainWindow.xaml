<Window
    x:Class="synthesizer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:synthesizer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1600"
    Height="700"
    mc:Ignorable="d"
    Background="LightGray"
    Title="Synthesizer">

  <Window.LayoutTransform>
    <ScaleTransform ScaleX="1.0" ScaleY="1.0" />
  </Window.LayoutTransform>

  <TabControl>
    <TabItem Header="Main Voice">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="55" />
          <ColumnDefinition Width="380" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="100" />
          <RowDefinition Height="100" />
          <RowDefinition Height="60" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="200" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="5"
                    HorizontalAlignment="Right"
                    Content="Volume:"
                    FontWeight="Bold" />
        <Slider
                    Grid.Row="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="5"
                    VerticalAlignment="Center"
                    Value="{Binding Volume}"
                    Maximum="1"
                    Minimum="0"
                    Orientation="Horizontal" />
        <Label
                    Grid.Row="2"
                    Grid.Column="3"
                    Width="40"
                    Margin="5"
                    HorizontalAlignment="Left"
                    Content="{Binding VolumeLabel}" />
        <StackPanel
                    Grid.Row="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="5"
                    Orientation="Horizontal">
          <Label
                        Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Content="Octave:"
                        FontWeight="Bold" />
          <ComboBox
                        Margin="5"
                        VerticalAlignment="Center"
                        ItemsSource="{Binding SelectableBaseFrequencies}"
                        SelectedItem="{Binding BaseFrequency}"
                        />
        </StackPanel>
        <StackPanel
                    Grid.Row="3"
                    Grid.Column="3"
                    Orientation="Horizontal">
          <Label
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Content="Waveform"
                        FontWeight="Bold" />
          <ComboBox
                        Margin="5"
                        VerticalAlignment="Center"
                        ItemsSource="{Binding SelectableWaveforms}"
                        SelectedItem="{Binding WaveType1}"
                        MinWidth="100"
                        />
        </StackPanel>

        <StackPanel
                    Grid.Row="3"
                    Grid.Column="4"
                    Orientation="Horizontal">
          <Label VerticalAlignment="Center" FontWeight="Bold">Level:</Label>
          <Slider
                        Margin="5"
                        VerticalAlignment="Center"
                        Value="{Binding Level1}"
                        Maximum="1.0"
                        Minimum="0.0"
                        Orientation="Horizontal" 
                        Width="300"
                        TickPlacement="BottomRight"
                        TickFrequency="0.05"
                        IsSnapToTickEnabled="True"
                        />
          <Label
                        Width="40"
                        Margin="5"
                        HorizontalAlignment="Left"
                        Content="{Binding Level1Label}" />
        </StackPanel>

        <Label
                    Grid.Row="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Envelope ADSR"
                    FontWeight="Bold" />
                    <StackPanel Grid.Row="4" Orientation="Horizontal">
          <Label
                        Width="50"
                        Height="25"
                        Margin="15,0,5,0"
                        Content="Attack" />
          <Label
                        Width="50"
                        Height="25"
                        Margin="5,0,5,0"
                        Content="Decay" />
          <Label
                        Width="50"
                        Height="25"
                        Margin="5,0,5,0"
                        Content="Sustain" />
          <Label
                        Width="50"
                        Height="25"
                        Margin="5,0,5,0"
                        Content="Release" />
        </StackPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal">
          <Slider
                        Margin="30,0,10,0"
                        Value="{Binding Attack}"
                        Maximum="2.0"
                        Minimum="0.0"
                        Orientation="Vertical" />
          <Slider
                        Margin="30,0,10,0"
                        Value="{Binding Decay}"
                        Maximum="2.0"
                        Minimum="0.0"
                        Orientation="Vertical" />
          <Slider
                        Margin="30,0,10,0"
                        Value="{Binding Sustain}"
                        Maximum="1.0"
                        Minimum="0.0"
                        Orientation="Vertical" />
          <Slider
                        Margin="30,0,10,0"
                        Value="{Binding Release}"
                        Maximum="2.0"
                        Minimum="0.0"
                        Orientation="Vertical" />
        </StackPanel>
        <StackPanel Grid.Row="6" Orientation="Horizontal">
          <Label
                        Width="55"
                        Height="25"
                        Margin="5,0,0,0"
                        Content="{Binding AttackLabel}" />
          <Label
                        Width="55"
                        Height="25"
                        Margin="5,0,0,0"
                        Content="{Binding DecayLabel}" />
          <Label
                        Width="55"
                        Height="25"
                        Margin="5,0,0,0"
                        Content="{Binding SustainLabel}" />
          <Label
                        Width="55"
                        Height="25"
                        Margin="3,0,0,0"
                        Content="{Binding ReleaseLabel}" />
        </StackPanel>
        <StackPanel
                    Grid.Row="4"
                    Grid.Column="2"
                    Orientation="Horizontal">
          <Label
                        Margin="15,0,0,0"
                        Content="Low Pass Filter"
                        FontWeight="Bold" />
          <Label Margin="15,0,0,0" Content="Cut Off" />
          <Label Margin="15,0,0,0" Content="Q" />
          <Label
                        Margin="15,0,0,0"
                        Content="Sub-Osc."
                        FontWeight="Bold" />
          <Label
                        Margin="15,0,0,0"
                        Content="Vibrato"
                        FontWeight="Bold" />
        </StackPanel>
        <StackPanel
                    Grid.Row="5"
                    Grid.Column="2"
                    Orientation="Horizontal">
          <CheckBox
                        Margin="20,0,0,0"
                        VerticalAlignment="Top"
                        Name="LowPassFilter"
                        IsChecked="{Binding EnableLpf}">
            Enable
          </CheckBox>
          <Slider
                        Margin="58,0,10,0"
                        Value="{Binding CutOff}"
                        Maximum="8000"
                        Minimum="1000"
                        Orientation="Vertical"
                        TickFrequency="200"
                        TickPlacement="TopLeft" />
          <Slider
                        Margin="12,0,10,0"
                        Value="{Binding Q}"
                        Maximum="1.0"
                        Minimum="0.0"
                        Orientation="Vertical"
                        TickFrequency="0.1"
                        TickPlacement="TopLeft" />
          <CheckBox
                        Margin="12,0,0,0"
                        VerticalAlignment="Top"
                        Name="SubOscillator"
                        IsChecked="{Binding EnableSubOsc}">
            Enable
          </CheckBox>
          <CheckBox
                        Margin="17,0,0,0"
                        VerticalAlignment="Top"
                        Name="Vibrato"
                        IsChecked="{Binding EnableVibrato}">
            Enable
          </CheckBox>
        </StackPanel>
        <StackPanel
                    Grid.Row="6"
                    Grid.Column="2"
                    Orientation="Horizontal">
          <Label
                        Width="60"
                        Height="30"
                        Margin="115,0,0,0"
                        Content="{Binding CutOffLabel}" />
          <Label
                        Width="40"
                        Height="30"
                        Margin="10,0,0,0"
                        Content="{Binding QLabel}" />
        </StackPanel>
        <StackPanel
                    Grid.Row="4"
                    Grid.Column="3"
                    Orientation="Horizontal">
          <Label
                        Margin="0,0,0,0"
                        Content="Tremolo/AM"
                        FontWeight="Bold" />
          <Label Margin="10,0,0,0" Content="Freq." />
          <Label Margin="15,0,0,0" Content="Gain" />
          <Label
                        Margin="0,0,0,0"
                        Content="Chorus"
                        FontWeight="Bold" />
          <Label Margin="10,0,0,0" Content="Width" />
          <Label Margin="10,0,0,0" Content="Sweep" />
          <Label Margin="10,0,0,0" Content="Delay" />
        </StackPanel>
        <StackPanel
                    Grid.Row="5"
                    Grid.Column="3"
                    Orientation="Horizontal">
          <StackPanel Orientation="Vertical">
            <CheckBox
                            Margin="5,0,0,0"
                            VerticalAlignment="Top"
                            Name="Tremolo"
                            IsChecked="{Binding EnableTremolo}">
              Enable
            </CheckBox>
            <Label Margin="5,0,0,0" Content="x Freq." />
            <Slider
                            Height="120"
                            Margin="15,0,10,0"
                            Value="{Binding TremoloFreqMult}"
                            IsSnapToTickEnabled="True"
                            Maximum="50"
                            Minimum="1"
                            Orientation="Vertical"
                            TickPlacement="TopLeft"
                            Ticks="1, 5, 10, 15, 20, 25, 30, 35, 40, 45, 50" />
            <Label
                            Width="30"
                            Height="30"
                            Margin="2,0,0,0"
                            Content="{Binding TremoloFreqMultLabel}" />
          </StackPanel>
          <Slider
                        Margin="40,0,10,0"
                        Value="{Binding TremoloFreq}"
                        IsSnapToTickEnabled="True"
                        Maximum="20"
                        Minimum="1"
                        Orientation="Vertical"
                        TickFrequency="1"
                        TickPlacement="TopLeft" />
          <Slider
                        Margin="17,0,10,0"
                        Value="{Binding TremoloGain}"
                        IsSnapToTickEnabled="True"
                        Maximum="0.5"
                        Minimum="0.0"
                        Orientation="Vertical"
                        TickFrequency="0.1"
                        TickPlacement="TopLeft" />
          <Slider
                        Margin="
                        55,0,10,0"
                        Value="{Binding ChorusWidth}"
                        IsSnapToTickEnabled="True"
                        Maximum="1.0"
                        Minimum="0.0"
                        Orientation="Vertical"
                        TickFrequency="0.1"
                        TickPlacement="TopLeft" />
          <Slider
                        Margin="20,0,10,0"
                        Value="{Binding ChorusSweep}"
                        IsSnapToTickEnabled="True"
                        Maximum="1.0"
                        Minimum="0.0"
                        Orientation="Vertical"
                        TickFrequency="0.1"
                        TickPlacement="TopLeft" />
          <Slider
                        Margin="15,0,10,0"
                        Value="{Binding ChorusDelay}"
                        IsSnapToTickEnabled="True"
                        Maximum="1.0"
                        Minimum="0.0"
                        Orientation="Vertical"
                        TickFrequency="0.1"
                        TickPlacement="TopLeft" />
        </StackPanel>
        <StackPanel
                    Grid.Row="6"
                    Grid.Column="3"
                    Orientation="Horizontal">
          <Label
                        Width="60"
                        Height="30"
                        Margin="80,0,0,0"
                        Content="{Binding TremoloFreqLabel}" />
          <Label
                        Width="40"
                        Height="30"
                        Margin="14,0,0,0"
                        Content="{Binding TremoloGainLabel}" />
          <Label
                        Width="40"
                        Height="30"
                        Margin="40,0,0,0"
                        Content="{Binding ChorusWidthLabel}" />
          <Label
                        Width="40"
                        Height="30"
                        Margin="15,0,0,0"
                        Content="{Binding ChorusSweepLabel}" />
          <Label
                        Width="40"
                        Height="30"
                        Margin="10,0,0,0"
                        Content="{Binding ChorusDelayLabel}" />
        </StackPanel>
        <StackPanel
                    Grid.Row="4"
                    Grid.Column="4"
                    Orientation="Horizontal">
          <Label
                        Margin="0,0,0,0"
                        Content="Phaser"
                        FontWeight="Bold" />
          <Label Margin="10,0,0,0" Content="Dry" />
          <Label Margin="10,0,0,0" Content="Wet" />
          <Label Margin="10,0,0,0" Content="Feedback" />
          <Label Margin="10,0,0,0" Content="Freq." />
          <Label Margin="10,0,0,0" Content="Width" />
          <Label Margin="10,0,0,0" Content="Sweep" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="5"
                    Grid.Column="4">
          <Slider
                        Margin="55,0,10,0"
                        Value="{Binding PhaserDry}"
                        IsSnapToTickEnabled="True"
                        Maximum="1.0"
                        Minimum="0.0"
                        Orientation="Vertical"
                        TickFrequency="0.1"
                        TickPlacement="TopLeft" />
          <Slider
                        Margin="5,0,10,0"
                        Value="{Binding PhaserWet}"
                        IsSnapToTickEnabled="True"
                        Maximum="1.0"
                        Minimum="0.0"
                        Orientation="Vertical"
                        TickFrequency="0.1"
                        TickPlacement="TopLeft" />
          <Slider
                        Margin="25,0,10,0"
                        Value="{Binding PhaserFeedback}"
                        IsSnapToTickEnabled="True"
                        Maximum="0.95"
                        Minimum="0.0"
                        Orientation="Vertical"
                        TickFrequency="0.05"
                        TickPlacement="TopLeft" />
          <Slider
                        Margin="25,0,10,0"
                        Value="{Binding PhaserFreq}"
                        IsSnapToTickEnabled="True"
                        Maximum="150.0"
                        Minimum="0.0"
                        Orientation="Vertical"
                        TickFrequency="10"
                        TickPlacement="TopLeft" />
          <Slider
                        Margin="15,0,10,0"
                        Value="{Binding PhaserWidth}"
                        IsSnapToTickEnabled="True"
                        Maximum="1.0"
                        Minimum="0.0"
                        Orientation="Vertical"
                        TickFrequency="0.1"
                        TickPlacement="TopLeft" />
          <Slider
                        Margin="15,0,10,0"
                        Value="{Binding PhaserSweep}"
                        IsSnapToTickEnabled="True"
                        Maximum="1.0"
                        Minimum="0.0"
                        Orientation="Vertical"
                        TickFrequency="0.1"
                        TickPlacement="TopLeft" />
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="6"
                    Grid.Column="4">

          <Label
                        Width="30"
                        Height="30"
                        Margin="55,0,0,0"
                        Content="{Binding PhaserDryLabel}" />
          <Label
                        Width="30"
                        Height="30"
                        Margin="10,0,0,0"
                        Content="{Binding PhaserWetLabel}" />
          <Label
                        Width="30"
                        Height="30"
                        Margin="28,0,0,0"
                        Content="{Binding PhaserFeedbackLabel}" />
          <Label
                        Width="40"
                        Height="30"
                        Margin="25,0,0,0"
                        Content="{Binding PhaserFreqLabel}" />
          <Label
                        Width="30"
                        Height="30"
                        Margin="12,0,0,0"
                        Content="{Binding PhaserWidthLabel}" />
          <Label
                        Width="30"
                        Height="30"
                        Margin="20,0,0,0"
                        Content="{Binding PhaserSweepLabel}" />
        </StackPanel>


        <StackPanel
                    x:Name="Buttons"
                    Grid.Row="7"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Margin="5"
                    Orientation="Horizontal">
          <Button
                        x:Name="On"
                        Width="50"
                        Margin="5"
                        Command="{Binding OnCommand}"
                        Content="On" />
          <Button
                        x:Name="Off"
                        Width="50"
                        Margin="5"
                        Command="{Binding OffCommand}"
                        Content="Off" />
          
          <Label x:Name="midiInLabel" Content="MIDI Controllers" FontWeight="Bold"/>
          <ComboBox Name="midiInDevices" Width="300" SelectedIndex="{Binding MidiIn}" />
         <Button
             x:Name="midiOn"
             Width="50"
             Margin="5"
             Command="{Binding MidiOnCommand}"
             Content="MIDI On" />
         <Button
             x:Name="midiOff"
             Width="50"
             Margin="5"
             Command="{Binding MidiOffCommand}"
             Content="MIDI Off" />

                </StackPanel>
        <local:AmplitudeVisualizer
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="5"
                    Amplitudes ="{Binding FrequencyAmplitudes}" />
        <local:WaveformVisualizer
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="5"
                    Waveform="{Binding Waveform}" />
      </Grid>
    </TabItem>
    <TabItem Header="Voice 2">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="55" />
          <ColumnDefinition Width="380" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="100" />
          <RowDefinition Height="100" />
          <RowDefinition Height="60" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="200" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <local:AmplitudeVisualizer
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="5"
                    Amplitudes ="{Binding FrequencyAmplitudes}" />
        <local:WaveformVisualizer
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="5"
                    Waveform="{Binding Waveform}" />

        <Label
                    Grid.Row="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Envelope ADSR"
                    FontWeight="Bold" />
        <StackPanel Grid.Row="4" Orientation="Horizontal">
          <Label
                        Width="50"
                        Height="25"
                        Margin="15,0,5,0"
                        Content="Attack" />
          <Label
                        Width="50"
                        Height="25"
                        Margin="5,0,5,0"
                        Content="Decay" />
          <Label
                        Width="50"
                        Height="25"
                        Margin="5,0,5,0"
                        Content="Sustain" />
          <Label
                        Width="50"
                        Height="25"
                        Margin="5,0,5,0"
                        Content="Release" />
        </StackPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal">
          <Slider
                        Margin="30,0,10,0"
                        Value="{Binding Attack2}"
                        Maximum="2.0"
                        Minimum="0.0"
                        Orientation="Vertical" />
          <Slider
                        Margin="30,0,10,0"
                        Value="{Binding Decay2}"
                        Maximum="2.0"
                        Minimum="0.0"
                        Orientation="Vertical" />
          <Slider
                        Margin="30,0,10,0"
                        Value="{Binding Sustain2}"
                        Maximum="1.0"
                        Minimum="0.0"
                        Orientation="Vertical" />
          <Slider
                        Margin="30,0,10,0"
                        Value="{Binding Release2}"
                        Maximum="2.0"
                        Minimum="0.0"
                        Orientation="Vertical" />
        </StackPanel>
        <StackPanel Grid.Row="6" Orientation="Horizontal">
          <Label
                        Width="55"
                        Height="25"
                        Margin="5,0,0,0"
                        Content="{Binding Attack2Label}" />
          <Label
                        Width="55"
                        Height="25"
                        Margin="5,0,0,0"
                        Content="{Binding Decay2Label}" />
          <Label
                        Width="55"
                        Height="25"
                        Margin="5,0,0,0"
                        Content="{Binding Sustain2Label}" />
          <Label
                        Width="55"
                        Height="25"
                        Margin="3,0,0,0"
                        Content="{Binding Release2Label}" />
        </StackPanel>

        <StackPanel
                    Grid.Row="3"
                    Grid.Column="3"
                    Orientation="Horizontal">
          <Label
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Content="Waveform"
                        FontWeight="Bold" />
          <ComboBox
                        Margin="5"
                        VerticalAlignment="Center"
                        ItemsSource="{Binding SelectableWaveforms}"
                        SelectedItem="{Binding WaveType2}"
                        MinWidth="100"
                        />

        </StackPanel>
        <StackPanel
                    Grid.Row="3"
                    Grid.Column="4"
                    Orientation="Horizontal">
          <Label VerticalAlignment="Center" FontWeight="Bold">Level:</Label>
          <Slider
                        Margin="5"
                        VerticalAlignment="Center"
                        Value="{Binding Level2}"
                        Maximum="1.0"
                        Minimum="0.0"
                        Orientation="Horizontal" 
                        Width="300"
                        TickPlacement="BottomRight"
                        TickFrequency="0.05"
                        IsSnapToTickEnabled="True"
                        />
          <Label
                        Width="40"
                        Margin="5"
                        HorizontalAlignment="Left"
                        Content="{Binding Level2Label}" />
        </StackPanel>

        <StackPanel
                    Grid.Row="5"
                    Grid.Column="4"
                    Orientation="Vertical">

          <Label FontWeight="Bold" Content="Octaves"/>

          <ComboBox 
            Width="100" 
            HorizontalAlignment="Left"
            ItemsSource="{Binding SelectableOctaves}"
            SelectedItem="{Binding Octave2}"/>

          <Label FontWeight="Bold" Content="Semitones"/>

          <ComboBox 
            Width="100" 
            HorizontalAlignment="Left"
            ItemsSource="{Binding SelectableSemiTones}"
            SelectedItem="{Binding Semitone2}"/>

        </StackPanel>

        <StackPanel
                    Grid.Row="7"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Margin="5"
                    Orientation="Horizontal">
          <Button
                        Width="50"
                        Margin="5"
                        Command="{Binding OnCommand}"
                        Content="On" />
          <Button
                        Width="50"
                        Margin="5"
                        Command="{Binding OffCommand}"
                        Content="Off" />
        </StackPanel>
      </Grid>
    </TabItem>
    <TabItem Header="Voice 3">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="55" />
          <ColumnDefinition Width="380" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="100" />
          <RowDefinition Height="100" />
          <RowDefinition Height="60" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="200" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <local:AmplitudeVisualizer
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="5"
                    Amplitudes ="{Binding FrequencyAmplitudes}" />
        <local:WaveformVisualizer
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="5"
                    Waveform="{Binding Waveform}" />

        <Label
                    Grid.Row="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Envelope ADSR"
                    FontWeight="Bold" />
        <StackPanel Grid.Row="4" Orientation="Horizontal">
          <Label
                        Width="50"
                        Height="25"
                        Margin="15,0,5,0"
                        Content="Attack" />
          <Label
                        Width="50"
                        Height="25"
                        Margin="5,0,5,0"
                        Content="Decay" />
          <Label
                        Width="50"
                        Height="25"
                        Margin="5,0,5,0"
                        Content="Sustain" />
          <Label
                        Width="50"
                        Height="25"
                        Margin="5,0,5,0"
                        Content="Release" />
        </StackPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal">
          <Slider
                        Margin="30,0,10,0"
                        Value="{Binding Attack3}"
                        Maximum="2.0"
                        Minimum="0.0"
                        Orientation="Vertical" />
          <Slider
                        Margin="30,0,10,0"
                        Value="{Binding Decay3}"
                        Maximum="2.0"
                        Minimum="0.0"
                        Orientation="Vertical" />
          <Slider
                        Margin="30,0,10,0"
                        Value="{Binding Sustain3}"
                        Maximum="1.0"
                        Minimum="0.0"
                        Orientation="Vertical" />
          <Slider
                        Margin="30,0,10,0"
                        Value="{Binding Release3}"
                        Maximum="2.0"
                        Minimum="0.0"
                        Orientation="Vertical" />
        </StackPanel>
        <StackPanel Grid.Row="6" Orientation="Horizontal">
          <Label
                        Width="55"
                        Height="25"
                        Margin="5,0,0,0"
                        Content="{Binding Attack3Label}" />
          <Label
                        Width="55"
                        Height="25"
                        Margin="5,0,0,0"
                        Content="{Binding Decay3Label}" />
          <Label
                        Width="55"
                        Height="25"
                        Margin="5,0,0,0"
                        Content="{Binding Sustain3Label}" />
          <Label
                        Width="55"
                        Height="25"
                        Margin="3,0,0,0"
                        Content="{Binding Release3Label}" />
        </StackPanel>

        <StackPanel
                    Grid.Row="3"
                    Grid.Column="3"
                    Orientation="Horizontal">
          <Label
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Content="Waveform"
                        FontWeight="Bold" />
          <ComboBox
                        Margin="5"
                        VerticalAlignment="Center"
                        ItemsSource="{Binding SelectableWaveforms}"
                        SelectedItem="{Binding WaveType3}"
                        MinWidth="100"
                        />
        </StackPanel>
        <StackPanel
                    Grid.Row="3"
                    Grid.Column="4"
                    Orientation="Horizontal">
          <Label VerticalAlignment="Center" FontWeight="Bold">Level:</Label>
          <Slider
                        Margin="5"
                        VerticalAlignment="Center"
                        Value="{Binding Level3}"
                        Maximum="1.0"
                        Minimum="0.0"
                        Orientation="Horizontal" 
                        Width="300"
                        TickPlacement="BottomRight"
                        TickFrequency="0.05"
                        IsSnapToTickEnabled="True"
                        />
          <Label
                        Width="40"
                        Margin="5"
                        HorizontalAlignment="Left"
                        Content="{Binding Level3Label}" />
        </StackPanel>

        <StackPanel
                    Grid.Row="5"
                    Grid.Column="4"
                    Orientation="Vertical">

          <Label FontWeight="Bold" Content="Octaves"/>

          <ComboBox 
            Width="100" 
            HorizontalAlignment="Left"
            ItemsSource="{Binding SelectableOctaves}"
            SelectedItem="{Binding Octave3}" />

          <Label FontWeight="Bold" Content="Semitones"/>

          <ComboBox 
            Width="100" 
            HorizontalAlignment="Left"
            ItemsSource="{Binding SelectableSemiTones}"
            SelectedItem="{Binding Semitone3}"/>

        </StackPanel>

        <StackPanel
                    Grid.Row="7"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Margin="5"
                    Orientation="Horizontal">
          <Button
                        Width="50"
                        Margin="5"
                        Command="{Binding OnCommand}"
                        Content="On" />
          <Button
                        Width="50"
                        Margin="5"
                        Command="{Binding OffCommand}"
                        Content="Off" />
        </StackPanel>
      </Grid>
    </TabItem>
  </TabControl>

</Window>
